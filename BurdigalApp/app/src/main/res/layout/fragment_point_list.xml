<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.enseirb.gl.burdigalaapp.presenter.fragment.PointListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btn_previous"
            android:layout_width="@dimen/list_img_button_size"
            android:layout_height="@dimen/list_img_button_size"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_prev"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/service_name"
            android:layout_width="0dp"
            android:layout_height="@dimen/list_fragment_name_layout_height"
            android:layout_weight="1"
            android:paddingLeft="@dimen/list_fragment_service_name_horizontal_padding"
            android:paddingRight="@dimen/list_fragment_service_name_horizontal_padding"
            android:textSize="@dimen/list_fragment_name_height"
            android:textColor="@android:color/black"
            android:gravity="center_horizontal"/>

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="@dimen/list_img_button_size"
            android:layout_height="@dimen/list_img_button_size"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_acton_next"/>

    </LinearLayout>

    <ListView android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/btn_top_line_color"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/return_to_map"
        android:id="@+id/btn_return_to_map"
        android:background="@drawable/button_simple"/>

</LinearLayout>
